          "cargo": {
            "$ref": "#/components/schemas/CargoInfoDto"
          },
          "payment": {
            "$ref": "#/components/schemas/PaymentInfoDto"
          }
        },
        "additionalProperties": false
      },
      "ParcelResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "trackingNumber": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "arrivalTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "qrToken": {
            "type": "string",
            "nullable": true
          },
          "qrExpiresAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "senderName": {
            "type": "string",
            "nullable": true
          },
          "senderContactInfo": {
            "type": "string",
            "nullable": true
          },
          "receiverName": {
            "type": "string",
            "nullable": true
          },
          "receiverContactInfo": {
            "type": "string",
            "nullable": true
          },
          "cargoDescription": {
            "type": "string",
            "nullable": true
          },
          "cargoPickupLocation": {
            "type": "string",
            "nullable": true
          },
          "cargoDeliveryLocation": {
            "type": "string",
            "nullable": true
          },
          "cargoSpecialInstructions": {
            "type": "string",
            "nullable": true
          },
          "paymentProposedFee": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "requestedByUser": {
            "$ref": "#/components/schemas/UserMinimalDto"
          },
          "assignedToUser": {
            "$ref": "#/components/schemas/UserMinimalDto"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "deliveryLogs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DeliveryLogResponseDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PaymentInfoDto": {
        "type": "object",
        "properties": {
          "proposedFee": {
            "minimum": 0,
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
